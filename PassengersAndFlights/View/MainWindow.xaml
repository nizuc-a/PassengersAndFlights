<Window x:Class="PassengersAndFlights.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassengersAndFlights"
        xmlns:vm="clr-namespace:PassengersAndFlights.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

	<Window.DataContext>
		<vm:FlightsVM />
	</Window.DataContext>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Margin="5" Orientation="Horizontal">
			<Button Content="Open" />
			<Separator Opacity="0" Width="5" />
			<Button Content="Save" />
			<Separator Opacity="0" Width="5" />
			<Button Content="Add person" />
			<Separator Opacity="0" Width="5" />
			<Button Content="Add flight" />
			<Separator Opacity="0" Width="5" />
		</StackPanel>

		<ListView Grid.Row="1" 
		          ItemsSource="{Binding Flights}"
		          Margin="10">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Номер рейса"
					                DisplayMemberBinding="{Binding FlightNumber}"
					                Width="100" />
					<GridViewColumn Header="День вылета"
					                DisplayMemberBinding="{Binding GetDate}"
					                Width="100" />
					<GridViewColumn Header="Время вылета"
					                DisplayMemberBinding="{Binding GetTime}"
					                Width="100" />
				</GridView>
			</ListView.View>
		</ListView>

	</Grid>
</Window>